@model Vendi.Data.ServiceCategory

@{
    ViewData["Title"] = "Categories - Serives";
    Layout = "~/Views/Shared/_CPLayout.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-4">
                    <img src="@Model.ImagePath" class="img-thumbnail" alt="Cinque Terre" width="350">
                </div>
                <div class="col-md-8">

                    <div class="form-group">
                        <h4>Details</h4>
                        <hr />
                        <dl class="row">
                            <dt class="col-sm-2">
                                <label>Category Name:</label>
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CategoryName)
                            </dd>
                            <dt class="col-sm-2">
                                <label>User:</label>
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UserId)
                            </dd>
                            <dt class="col-sm-2">
                                <label>Create Date:</label>
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CreateDate)
                            </dd>
                            <dt class="col-sm-2">
                                <label>Update Date:</label>
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UpdateTime)
                            </dd>
                        </dl>
                    </div>

                    <div>
                         
                        <a asp-action="Edit" asp-route-id="@Model.ServiceCategoryId"><i style="color:#4272d7;" class="fa fa-edit fa-3x"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>