@model Vendi.Data.Product

@{
    ViewData["Title"] = "Create";
}


<script src="https://code.jquery.com/jquery-3.3.1.slim.js" integrity="sha256-fNXJFIlca05BIO2Y5zh1xrShK3ME+/lYZ0j+ChxX2DA=" crossorigin="anonymous"></script>
<link href="~/css/tagsinput.css" rel="stylesheet" />
<script src="~/js/tagsinput.js"></script>

<h4>Add Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="shadow-sm p-3 mb-5 bg-white rounded">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ProductId" hidden="hidden"/>
                <input asp-for="CreateDate" hidden="hidden"/>
                <div class="form-group">

                    <select asp-for="Condition" style="width:100%">

                        <option value="1">New</option>
                        <option value="2">Used</option>
                    </select>
                    <span asp-validation-for="Condition" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
                        </div>
                        <input asp-for="ProductName" class="form-control" placeholder="ProductName" type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" />
                    </div>
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Quantity</span>
                        </div>
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" />
                    </div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">BarCode</span>
                        </div>
                        <input asp-for="BarCode" class="form-control" placeholder="BarCode" type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" />
                    </div>
                    <span asp-validation-for="BarCode" class="text-danger"></span>
                </div>
                <div class="form-group">

                    @Html.DropDownListFor(model => model.BrandId, new SelectList(Model.Brands, "BrandId", "BrandName"), new { @style = "width: 100%;" })
                    <span asp-validation-for="BrandId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.DropDownListFor(model => model.ProductTypeId, new SelectList(Model.ProductTypes, "ProductTypeId", "ProductTypeName"), new { @style = "width: 100%;" })
                    <span asp-validation-for="ProductTypeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Price</span>
                        </div>
                        <input asp-for="Price" class="form-control" placeholder="Price" type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>




                <div class="form-group">
                    @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.Categories, "CategoryId", "CategoryName"), new { @style = "width: 100%;" })
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Description</span>
                        </div>
                        <textarea asp-for="Description" class="form-control" placeholder="Description" type="text" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm"></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="input-group input-group-sm mb-3">
                        <div class="input-group-prepend">

                            <input asp-for="Tags" class="form-control" aria-label="Sizing example input" type="text" data-role="tagsinput" aria-describedby="inputGroup-sizing-sm" placeholder="Add Tag" />
                        </div>

                    </div>
                    <span asp-validation-for="Tags" class="text-danger"></span>
                </div>


                

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsFeatured" /> @Html.DisplayNameFor(model => model.IsFeatured)
                    </label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



}
